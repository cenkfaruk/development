<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/action_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Fashion Photos" />

    <ImageView
        android:id="@+id/search_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_toLeftOf="@+id/num_of_column"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        app:srcCompat="@mipmap/search_icon" />

    <ImageView
        android:id="@+id/num_of_column"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp"
        android:layout_centerVertical="true"
        app:srcCompat="@mipmap/num_of_column" />

    <ImageView
        android:id="@+id/share"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp"
        android:layout_centerVertical="true"
        app:srcCompat="@mipmap/share"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/search_lay"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">
        <EditText
            android:id="@+id/search_edittext"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:imeOptions="actionSearch"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:focusable="true"
            android:inputType="textPersonName"
            android:hint="Search"
            android:gravity="center"
            android:ellipsize="start"
            android:singleLine="true"
            android:textColorHint="#C1BDBD"
            android:textColor="#000000"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/column_lay"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/one_column"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"
            android:onClick="editNumOfColListener"/>

        <TextView
            android:id="@+id/two_column"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"
            android:onClick="editNumOfColListener"/>

        <TextView
            android:id="@+id/three_column"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"
            android:onClick="editNumOfColListener"/>

        <TextView
            android:id="@+id/four_column"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"
            android:onClick="editNumOfColListener"/>
        <TextView
            android:id="@+id/five_column"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"
            android:onClick="editNumOfColListener"/>
        <TextView
            android:id="@+id/six_column"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"
            android:onClick="editNumOfColListener"/>
    </LinearLayout>
</RelativeLayout>
